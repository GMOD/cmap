[% INCLUDE admin_header.tmpl title="Create Feature" %]

<a href="admin">Home</a>

<form action="admin" method="post">
<table>
    <tr>
        <td align="right">
            Map:
        </td>
        <td>
            <a href="admin?action=map_view;map_id=[% map.map_id %]">[% map.species_name %]-[% map.map_set_name %]-[% map.map_name %]</a>
        </td>
    </tr>

    <tr>
        <td align="right">
            Acc ID:
        </td>
        <td>
            <input name="accession_id" value="">
        </td>
    </tr>

    <tr>
        <td align="right">
            Feature Name:
        </td>
        <td>
            <input name="feature_name" value="">
        </td>
    </tr>

    <tr>
        <td align="right">
            Alternate Name:
        </td>
        <td>
            <input name="alternate_name" value="">
        </td>
    </tr>

    <tr>
        <td align="right">
            Feature Type:
        </td>
        <td>
            <select name="feature_type_id">
                [% FOREACH ft=feature_types %]
                    <option value="[% ft.feature_type_id %]">[% ft.feature_type %]</option>
                [% END %]
        </td>
    </tr>

    <tr>
        <td align="right">
            Is Landmark:
        </td>
        <td>
            <select name="is_landmark">
                <option value="0"">No</option>
                <option value="1"">Yes</option>
            </select>
        </td>
    </tr>

    <tr>
        <td align="right">
            Start:
        </td>
        <td>
            <input name="start_position" value="">
        </td>
    </tr>

    <tr>
        <td align="right">
            Stop:
        </td>
        <td>
            <input name="stop_position" value="">
        </td>
    </tr>

    <tr>
        <td align="center" colspan="2">
            <input type="hidden" name="map_id" value="[% map.map_id %]">
            <input type="hidden" name="action" value="feature_insert">
            <input type="reset"  value="Reset">
            <input type="submit" value="Submit">
        </td>
    </tr>
</table>
</form>

[% INCLUDE admin_footer.tmpl %]
