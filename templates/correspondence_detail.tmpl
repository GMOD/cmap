[% SET title="Correspondences Detail &quot;$corr.accession_id&quot;" %]
[% 
    INCLUDE header.tmpl 
    title='CMap - Correspondence Details'
    cur_sec='correspondence_details'
    help_anchor='correspondence_details'
%]
<h1>[% title %]</h1>

<table width="100%">
    <tr class="colored">
        <th>&nbsp;</th>
        <th colspan="2">Feature 1</th>
        <th colspan="2">Feature 2</th>
    </tr>
    <tr>
        <th align="right">Feature Name:</th>
        <td>[% feature1.feature_name %]</td>
        <td align="center"><b>[</b>&nbsp;<a href="feature?feature_aid=[% feature1.feature_aid %]">View&nbsp;Feature&nbsp;Details</a>&nbsp;<b>]</b></td>
        <td>[% feature2.feature_name %]</td>
        <td align="center"><b>[</b>&nbsp;<a href="feature?feature_aid=[% feature2.feature_aid %]">View&nbsp;Feature&nbsp;Details</a>&nbsp;<b>]</b></td>
    </tr>
    <tr>
        <th align="right">Feature Aliases:</th>
        <td>[% feature1.aliases.join(', ') %]</td>
        <td>&nbsp;</td>
        <td>[% feature2.aliases.join(', ') %]</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <th align="right">Map Name:</th>
        <td> 
            [% feature1.species_name %] -
            [% feature1.map_set_name %] -
            [% feature1.map_name %]
        </td>
        <td align="center"><b>[</b>&nbsp;<a href="map_set_info?map_set_aid=[% feature1.map_set_aid %]">View&nbsp;Map&nbsp;Set</a>&nbsp;<b>]</b></td>
        <td> 
            [% feature2.species_name %] -
            [% feature2.map_set_name %] -
            [% feature2.map_name %]
        </td>
        <td align="center"><b>[</b>&nbsp;<a href="map_set_info?map_set_aid=[% feature2.map_set_aid %]">View&nbsp;Map&nbsp;Set</a>&nbsp;<b>]</b></td>
    </tr>
    <tr>
        <th align="right">Position:</th>
        <td>
            [% feature1.start_position | commify %]
            [% IF feature1.stop_position.defined AND feature1.stop_position > feature1.start_position %]- [% feature1.stop_position | commify %][% END %] [% feature1.map_units %]
        </td>
        <td align="center"><b>[</b>&nbsp;<a href="map_details?ref_map_set_aid=[% feature1.map_set_aid %];ref_map_aids=[% feature1.map_aid %];highlight=[% feature1.feature_aid %]">View&nbsp;On&nbsp;Map</a>&nbsp;<b>]</b></td>
        <td>
            [% feature2.start_position | commify %]
            [% IF feature2.stop_position.defined AND feature2.stop_position > feature2.start_position %]- [% feature2.stop_position | commify %][% END %] [% feature2.map_units %]
        </td>
        <td align="center"><b>[</b>&nbsp;<a href="map_details?ref_map_set_aid=[% feature2.map_set_aid %];ref_map_aids=[% feature2.map_aid %];highlight=[% feature2.feature_aid %]">View&nbsp;On&nbsp;Map</a>&nbsp;<b>]</b></td>
    </tr>
    <tr>
        <th align="right">Feature Type:</th>
        <td>[% feature1.feature_type %]</td>
        <td align="center"><b>[</b>&nbsp;<a href="feature_type_info?feature_type_aid=[% feature1.feature_type_aid %]">View&nbsp;Feature&nbsp;Type&nbsp;Info</a>&nbsp;<b>]</b></td>
        <td>[% feature2.feature_type %]</td>
        <td align="center"><b>[</b>&nbsp;<a href="feature_type_info?feature_type_aid=[% feature2.feature_type_aid %]">View&nbsp;Feature&nbsp;Type&nbsp;Info</a>&nbsp;<b>]</b></td>
    </tr>
</table>

<h2>Evidence</h2>

[% IF corr.evidence.size %]
    <table width="100%">
        <tr>
            <th>Acc. ID</th>
            <th>Evidence Type</th>
            <th>Evidence Rank</th>
            <th>Score</th>
            <th>&nbsp;</th>
        </tr>
      
        [% SET i=0 %]
        [% FOREACH e=corr.evidence %]
            <tr class="[% IF i % 2 == 0 %]colored[% ELSE %]monotonic[% END %]">
                <td>[% e.accession_id %]</td>
                <td>[% e.evidence_type %]</td>
                <td align="right">[% e.rank %]</td>
                <td align="right">[% IF e.score.defined; e.score; ELSE; 'N/A'; END %]</td>
                <td align="center">
                    <b>[</b>&nbsp;<a href="evidence_type_info?evidence_type_aid=[% e.evidence_type_aid %]">View&nbsp;Evidence&nbsp;Type&nbsp;Info</a>&nbsp<b>]</b>
                </td>
                </td>
            </tr>
            [% SET i=i+1 %]
        [% END %]
    </table>

[% ELSE %]

  <p>No evidence to show.</p>

[% END %]

[% INCLUDE footer.tmpl %]
