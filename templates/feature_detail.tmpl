[% 
    INCLUDE header.tmpl 
    title="CMap - Feature Details &quot;$feature.feature_name&quot; ($feature.feature_aid)"
    cur_sec='feature_details'
    help_anchor='feature_details'
%]

<h1>Feature &quot;[% feature.feature_name %]&quot;</h1>

<table border="0">
    <tr>
        <th align="right">Feature Name:</th>
        <td colspan="2">[% feature.feature_name %]</td>
    </tr>

    <tr>
        <th align="right" valign="top"[% IF feature.aliases.size > 1 %] rowspan="[% feature.aliases.size %]"[% END %]>Aliases:</th>
        [%- IF feature.defined('aliases') AND feature.aliases.size -%]
            [% SET alias=feature.aliases.shift %]
            <td>[% alias %]</td>
            <td align="center"><b>[</b>&nbsp;<a href="feature_alias?feature_aid=[% feature.feature_aid %];feature_alias=[% alias | uri %]">View&nbsp;Alias&nbsp;Details</a>&nbsp;<b>]</b>
            [% IF feature.aliases.size %]
                </tr>
                [%- FOREACH alias=feature.aliases -%]
                    <tr>
                        <td>[% alias %]</td>
                        <td align="center"><b>[</b>&nbsp;<a href="feature_alias?feature_aid=[% feature.feature_aid %];feature_alias=[% alias | uri %]">View&nbsp;Alias&nbsp;Details</a>&nbsp;<b>]</b>
                        </td>
                    </tr>
                [% END %]
           [% END %]
        [%- ELSE -%]
            <td colspan="2">N/A</td>
        [%- END -%]
    </tr>

    <tr>
        <th align="right">Accession ID:</th>
        <td colspan="2">[% feature.feature_aid %]</td>
    </tr>

    <tr>
        <th align="right">Feature Type:</th>
        <td>[% feature.feature_type %]</td>
        <td align="center"><b>[</b>&nbsp;<a href="feature_type_info?feature_type_aid=[% feature.feature_type_aid %]">View&nbsp;Feature&nbsp;Type&nbsp;Info</a>&nbsp;<b>]</b></td>
    </tr>

    <tr>
        <th align="right">Map:</th>
        <td>
            [% feature.species_common_name %]-[% feature.map_set_name %]-[% feature.map_name %]
        </td>
        <td align="center">
             <b>[</b>&nbsp;<a href="map_details?ref_map_set_aid=[% feature.map_set_aid %];ref_map_aids=[% feature.map_aid %];highlight=&quot;[% feature.feature_name %]&quot;;label_features=landmarks">View&nbsp;Map&nbsp;Details</a>&nbsp;<b>]</b>
        </td>
    </tr>

    <tr>
        <th align="right">Start:</th>
        <td colspan="2">[% feature.start_position | commify %] [% feature.map_units %]</td>
    </tr>

    <tr>
        <th align="right">Stop:</th>
        <td colspan="2">
            [%- IF feature.stop_position.defined -%]
                [% feature.stop_position | commify %] [% feature.map_units %]
            [%- ELSE -%]
                &nbsp;
            [%- END -%]
        </td>
    </tr>

    [% FOREACH att=feature.attributes %]
        [% NEXT IF att.is_public.defined AND att.is_public == 0 %]
        <tr>
            <th align="right" valign="top">
                [% att.attribute_name | nbsp %]:
            </th>
            <td colspan="2">
                [%- IF att.attribute_value.match('^http://') -%]
                    <a href="[% att.attribute_value %]">[% att.attribute_value %]</a>
                [%- ELSE -%]
                    [% att.attribute_value %]
                [%- END -%]
            </td>
        </tr>
    [% END %]

    [% IF feature.xrefs.size %]
        <tr>
            <th align="right" valign="top">Cross-references:</th>
            <td colspan="2">
                [%- FOREACH xref=feature.xrefs -%]
                    [% NEXT UNLESS xref.xref_url %]
                    <b>[</b>&nbsp;<a href="[% xref.xref_url %]">[% xref.xref_name %]</a>&nbsp;<b>]</a><br />
                [%- END -%]
                </ul>
            </td>
        </tr> 
    [% END %]
</table>

<table width="100%">
    <tr class="colored">
        <th>Correspondences</th>
    </tr>
</table>

[% IF feature.correspondences.size %]
    <table width="100%">
        <tr>
            <th>Feature</th>
            <th>Map</th>
            <th>Map&nbsp;Type</th>
            <th>Aliases</th>
            <th>Evidence&nbsp;Type</th>
            <th colspan="4">Actions</th>
        </tr>
      
        [% SET i=0 %]
        [% FOREACH fc=feature.correspondences %]
            <tr class="[% IF i % 2 == 0 %]colored[% ELSE %]monotonic[% END %]">
                <td>
                    <a href="feature?feature_aid=[% fc.feature_aid %]">[% fc.feature_name %]</a>
                </td>
                <td>[% fc.species_common_name %]-[% fc.map_set_name %]-[% fc.map_name %]</td>
                <td>[% fc.map_type %]</td>
                <td>[% IF fc.defined('aliases') AND fc.aliases.size; fc.aliases.join(', '); ELSE; 'None'; END %]</td>
                <td>
                    [% FOREACH e=fc.evidence %]
                        <a href="evidence_type_info?evidence_type_aid=[% e.evidence_type_aid %]">[% e.evidence_type %]</a><br>
                    [% END %]
                </td>
                <td align="center">
                    <b>[</b>&nbsp;<a href="correspondence?correspondence_aid=[% fc.feature_correspondence_aid %]">Correspondence&nbsp;Details</a>&nbsp;<b>]</b>
                </td>
                <td align="center">
                    <b>[</b>&nbsp;<a href="map_details?ref_map_set_aid=[% fc.map_set_aid %];ref_map_aids=[% fc.map_aid %];highlight=[% fc.feature_aid %]">View&nbsp;On&nbsp;Map</a>&nbsp;<b>]</b>
                </td>
                <td align="center">
                    <b>[</b>&nbsp;<a href="viewer?ref_map_set_aid=[% feature.map_set_aid %];ref_map_aids=[% feature.map_aid %];highlight=[% feature.feature_aid %],[% fc.feature_aid %];comparative_maps=1%3dmap_aid%3d[% fc.map_aid %]">Comparative&nbsp;View</a>&nbsp;<b>]</b>
                </td>
            </tr>
            [% SET i=i+1 %]
        [% END %]
    </table>

[% ELSE %]

  <p>No correspondences to show.</p>

[% END %]

[% INCLUDE footer.tmpl %]
