<script language="javascript">
                                        
function setDivObjects(){
  hideAll();
}

function toggleDiv(obj){
  if (obj.style.display == 'block'){
    obj.style.display = 'none';
  }
  else{
    obj.style.display = 'block';
  }
}

function hideAll(){
  var divs=document.getElementsByTagName("DIV");
  for (var i=0; i < divs.length; i++){
    if (divs[i].id.search(/^display/)>=0){
      divs[i].style.display='none';
    }
    else if (divs[i].id.search(/^hidden/)>=0){
      divs[i].style.display='block';
    }
  }
}
function selectFeatureRadio(val){
  var radios=document.getElementsByTagName("INPUT");
  for (var i=0; i < radios.length; i++){
    if (radios[i].name.search(/^feature_type_/)>=0){
      if (radios[i].value==val){
        radios[i].checked=true;
      }
      else{
        radios[i].checked=false;
      }
    }
  }
}
function crop(slot_no, map_aid, value, is_start){
  var positionCount=0;
  var insertStart=-1;
  var insertStop=-1;
  var splitArray;
  if ( slot_no == 0){
    document.comparative_map_form.ref_map_aids.value 
      = addPosToStr(document.comparative_map_form.ref_map_aids.value, slot_no, map_aid, value, is_start)
  }
  else{
    var matchStr=slot_no+"=map_aid="+map_aid;
    document.comparative_map_form.comparative_maps.value 
      = addPosToStr(document.comparative_map_form.comparative_maps.value, slot_no, matchStr, value, is_start)
  }
}

function addPosToStr(str, slot_no, matchStr, value, is_start){
  var positionCount=0;
  var insertStart;
  var insertStop;
  var splitArray;

  splitArray=str.split(":");
  for (var i=0;i<splitArray.length;i++){
    var bracket = splitArray[i].indexOf("[");
    if (bracket>=0){
      this_aid=splitArray[i].substr(0,bracket);
      if (this_aid==matchStr){
        if (is_start){
          insertStart = positionCount+splitArray[i].indexOf("[")+1;
          insertStop  = positionCount+splitArray[i].indexOf("*");
        }
        else{
          insertStart = positionCount+splitArray[i].indexOf("*")+1;
          insertStop  = positionCount+splitArray[i].indexOf("]");
        }
        str = str.substr(0,insertStart) + value + str.substr(insertStop); 
        return str;
      }
    }
    else{
      if (splitArray[i]==matchStr){
        insertStart = positionCount+splitArray[i].length;
        if (is_start){
          str = str.substr(0,insertStart) + "["+value+"*]" + str.substr(insertStart);
        }
        else{
          str = str.substr(0,insertStart) + "[*"+value+"]" + str.substr(insertStart);
        }
        return str;
      }
    }
    positionCount+=splitArray[i].length + 1;
  }
  //If not found, tack it to the end.
  if (str!=""){
    str = str +":";
  }
  if (is_start){
    str = str +matchStr+"["+value+"*]";
  }
  else{
    str = str +matchStr+"[*"+value+"]";
  }
    
  return str;
}

</script>
