[% INCLUDE admin_header.tmpl title='Cross-References View' %]

<a href="admin">Home</a> |
<a href="admin?action=xref_create">Create New Cross-Reference</a>
<hr noshade>

<form action="admin">
<table width="100%">
    <tr>
        <td align="right">
            Restrict by DB Object:
        </td>
        <td>
            <input type="hidden" name="action" value="xrefs_view">
            <select name="object_name">
                <option value="">--None--</option>
                [% FOREACH o=db_objects %]
                    <option [% IF o.object_name==apr.param('object_name'); 'selected '; END %]value="[% o.object_name %]">[% o.object_name %]</option>
                [% END %]
            </select>
        </td>
    </tr>
    <tr>
        <td align="right">
            Show Generic XRefs Only:
        </td>
        <td>
            <input type="radio" name="generic_only" value="1"[% IF apr.param('generic_only')==1; ' checked'; END %]>Yes
            <input type="radio" name="generic_only" value="0"[% IF !apr.param('generic_only'); ' checked'; END %]>No
        </td>
    </tr>
    <tr>
        <td align="center" colspan="2">
            <input type="submit" value="Submit">
        </td>
    </tr>
</table>
</form>

[% IF xrefs.size %]
    <table width="100%">
        <tr>
            <td colspan="7" align="center">
                [% SET pager_url="admin?action=xrefs_view&object_name=${apr.param('object_name')}&generic_only=${apr.param('generic_only')}&order_by=${apr.param('order_by')}" %]
                [% PROCESS pager.tmpl %]
            </td>
        </tr>
        <tr>
            <th>
                <a href="admin?action=xrefs_view;object_name=[% apr.param('object_name') %];order_by=display_order;generic_only=[% apr.param('generic_only') %]">Display Order</a>
            </th>
            <th>
                <a href="admin?action=xrefs_view;object_name=[% apr.param('object_name') %];order_by=object_name;generic_only=[% apr.param('generic_only') %]">DB Object</a>
            </th>
            <th>
                <a href="admin?action=xrefs_view;object_name=[% apr.param('object_name') %];order_by=object_name;generic_only=[% apr.param('generic_only') %]">Object Name</a>
            </th>
            <th>
                <a href="admin?action=xrefs_view;object_name=[% apr.param('object_name') %];order_by=xref_name;generic_only=[% apr.param('generic_only') %]">Name</a>
            </th>
            <th>
                <a href="admin?action=xrefs_view;object_name=[% apr.param('object_name') %];order_by=xref_url;generic_only=[% apr.param('generic_only') %]">URL</a>
            </th>
            <th colspan="2" align="center">&nbsp;</th>
        </tr>

        [% SET i=0 %]
        [% FOREACH ref=xrefs %]
            <tr bgcolor="[% IF i % 2 == 0 %]lightgrey[% ELSE %]white[% END %]">
                <td>[% ref.display_order %]</td>
                <td>[% ref.db_object_name %]</td>
                <td>[% ref.actual_object_name %]</td>
                <td>[% ref.xref_name %]</td>
                <td>[% ref.xref_url | truncate(40) %]</td>
                <td align="center">
                    <a href="admin?action=xref_edit;xref_id=[% ref.xref_id %]">Edit</a>
                </td>
                <td align="center">
                    <a href="admin?action=confirm_delete;entity_type=cmap_xref;entity_id=[% ref.xref_id %];entity_name=[% ref.xref_name | uri%]">Delete</a>
                </td>
            </tr>
            [% SET i=i+1 %]
        [% END %]
    </table>
  
[% ELSE %]

  <p>No cross-references to show.</p>

[% END %]

[% INCLUDE admin_footer.tmpl %]

