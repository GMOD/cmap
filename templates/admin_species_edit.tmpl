[% INCLUDE admin_header.tmpl title="Species Edit &quot;$species.common_name&quot;" %]
<a href="admin">Home</a> |
<a href="admin?action=confirm_delete;entity_type=cmap_species;entity_id=[% species.species_id %];entity_name_field=common_name">Delete</a> |
<a href="admin?action=species_view">View Species</a>
<hr noshade>

[% IF errors.size %]
    <b>There were errors:</b>
    <ul>
        [% FOREACH e=errors %]
          <li>[% e %]</li>
        [% END %]
    </ul>
[% END %]

<form method="post" action="admin">
<table>
    <tr>
        <td align="right">Acc. ID <em>(opt.)</em>:</td>
        <td>
            <input name="accession_id" value="[% species.accession_id %]">
        </td>
    </tr>

    <tr>
        <td align="right">Common Name:</td>
        <td>
            <input name="common_name" value="[% species.common_name %]">
        </td>
    </tr>

    <tr>
        <td align="right">Full Name:</td>
        <td>
            <input name="full_name" value="[% species.full_name %]">
        </td>
    </tr>

    <tr>
        <td align="right">Display Order <em>(opt.)</em>:</td>
        <td>
            <input name="display_order" value="[% species.display_order %]">
        </td>
    </tr>

    <tr>
        <td align="right">NCBI Taxon ID <em>(opt.)</em>:</td>
        <td>
            <input name="ncbi_taxon_id" value="[% species.ncbi_taxon_id %]">
        </td>
    </tr>

    <tr>
        <td align="right">
            Note <em>(opt.)</em>:
        </td>
        <td>
            <textarea name="note" rows="10" cols="50" wrap="virtual">[% species.note %]</textarea>
        </td>
    </tr>

    <tr>
        <td colspan="2">
            <input type="submit" value="Submit">
            <input type="hidden" name="species_id" value="[% species.species_id %]">
            <input type="hidden" name="action" value="species_update">
        </td>
    </tr>
</table>
</form>
[% INCLUDE admin_footer.tmpl %]
